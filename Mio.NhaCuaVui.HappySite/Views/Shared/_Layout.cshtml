<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewData["Title"]" />
    @if (string.IsNullOrEmpty(ViewData["Description"] as string))
    {
        <meta property="og:description" content="Chúng tôi là một chuyến đò, kết nối những nhà hảo tâm và người cần giúp đỡ. Toàn bộ thông tin sẽ được công khai trên hệ thống!" />

    }
    else
    {
        <meta property="og:description" content="@ViewData["Description"]" />

    }


    <meta property="og:image" content="https://goidooi.com/Upload/Photo/Banner2.jpg" />

    <title>@ViewData["Title"] Gọi Đò Ơi!</title>
    <link rel="icon" type="image/png" href="~/img/favo.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" />
    <link href="~/js/select2.min.css" rel="stylesheet" />

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VYC4YSMSXK"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-VYC4YSMSXK');
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="height: 50px" src="~/img/GOIDOOI LOGO.jpg" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        <li class="nav-item" style="margin-bottom: 10px;margin-left: 10px">
                            <a class="nav-link text-light btn btn-danger " asp-area="" asp-controller="Beneficiary" asp-action="Index">Cần nhận</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 10px;margin-left: 10px">
                            <a class="nav-link text-light btn btn-info " asp-area="" asp-controller="ShipperRequest" asp-action="Index">Đăng ký giao hàng</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 10px;margin-left: 10px">
                            <a class="nav-link text-light btn btn-success " asp-area="" asp-controller="Report" asp-action="DeliverySuccess">Báo cáo</a>
                        </li>
                        <li class="nav-item" style="margin-left: 10px">
                            <a class="nav-link  text-light btn btn-warning" asp-area="" asp-controller="Home" asp-action="Instruction">Hướng dẫn sử dụng</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Đăng Nhập</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Mio.NhaCuaVui.HappySite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Messenger Chat plugin Code -->
    <div id="fb-root"></div>

    <!-- Your Chat plugin code -->
    <div id="fb-customer-chat" class="fb-customerchat">
    </div>

    <script>
        var chatbox = document.getElementById('fb-customer-chat');
        chatbox.setAttribute("page_id", "1983666468550519");
        chatbox.setAttribute("attribution", "page_inbox");

        window.fbAsyncInit = function () {
            FB.init({
                xfbml: true,
                version: 'v11.0'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
</body>
</html>
