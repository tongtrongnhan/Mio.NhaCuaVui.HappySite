<form asp-action="Search" method="POST" data-ajax="true" data-ajax-success="SearchSuccess">
    <div class="input-group">
        <div class="col-5">
            <label class="form-label" for="form1">Nhu cầu</label>
            <select name="CategoryIds" id="select-category" multiple asp-items="ViewBag.Category" class="form-control" style="width: 100%">
            </select>
        </div>

        <div class="col-5">
            <label class="form-label" for="form1">Quận</label>
            <select name="DistrictIds" id="select-district" multiple asp-items="ViewBag.Districts" class="form-control" style="width: 100%"> </select>
        </div>
        <div class="col-2">
            <button style="margin-top: 30px" type="submit" class="btn btn-primary">Tìm</button>
        </div>
    </div>
</form>



@section Scripts
{
    <script>
        function SearchSuccess(data) {
            $("div#main-content").html(data.html);
        }
    </script>
    <script>
        $("#select-category").select2();
        $("#select-district").select2();

    </script>

    <script>
        $(document).ready(function () {
            $("a.show-more").click(function (e) {
                e.preventDefault();
                var aTag = $(this);
                var categoryId = aTag.attr("data-categoryId");
                var benificaryId = aTag.attr("data-BenificaryId");
                var ul = $("ul[data-categoryId='" + categoryId + "'][data-BenificaryId='" + benificaryId + "']");
                if (ul.is(":visible")) {
                    ul.hide();
                } else {
                    ul.show();
                }

            });

        });
    </script>
}


